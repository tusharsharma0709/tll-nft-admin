		<div class="d-flex flex-column flex-root">
			<!--begin::Page-->
			<div class="d-flex flex-row flex-column-fluid page">
				<!--begin::Aside-->
				<%- include('../../partials/aside'); %>
				<!--end::Aside-->
				<!--begin::Wrapper-->
				<div class="d-flex flex-column flex-row-fluid wrapper" id="kt_wrapper">
					<!--begin::Header-->
					<%- include('../../partials/header'); %>
					<!--end::Header-->
					<!--begin::Content-->
					<div class="content d-flex flex-column flex-column-fluid" id="kt_content">
						<!--begin::Subheader-->
						<%- include('../../partials/subheader'); %>
						<!--end::Subheader-->
						<!--begin::Entry-->
						<div class="d-flex flex-column-fluid">
							<!--begin::Container-->
							<div class="container">
								
								<!--begin::Card-->
								<div class="card card-custom">
									<div class="card-header flex-wrap border-0 pt-6 pb-0">
										<div class="card-title">
											<h3 class="card-label">Sales Report</h3>
										</div>
										<form action="/exportExcel" method="GET">
											<input type="hidden" name="token_type" id="token_type_export" value="">
											<input type="hidden" name="token_id" id="token_id_export" value="">
											<input type="hidden" name="token_address" id="token_address_export" value="">
											<input type="hidden" name="seller_address" id="seller_address_export" value="">
											<input type="hidden" name="buyer_address" id="buyer_address_export" value="">
											<input type="hidden" name="from_date" id="from_date" value="">
											<input type="hidden" name="to_date" id="to_date" value="">
											<button type="submit" class="btn btn-info font-weight-bold mr-2" name="submitButton"><i class="la la-file-excel-o"></i> Export to Excel</button>
										</form>
									</div>
									<div class="card-body">
										<!--begin: Search Form-->
										<div class="mb-7">
											<div class="form-group row">
												<div class="col-md-2 col-lg-2" style="margin-top: 5px;">
													<label>Type:</label>
													<select class="form-control" id="token_type" name="token_type">
														<option value="">All</option>
														<option value="erc721">erc721</option>
														<option value="erc1155">erc1155</option>
													</select>
												</div>
												<div class="col-md-2 col-md-2" style="margin-top: 5px;">
													<label>Token Id:</label>
													<input type="text" class="form-control" placeholder="token ID" id="search_sale_by_tokenid" name="search_sale_by_tokenid" />
												</div>
												<div class="col-lg-4" style="margin-top: 5px;">
													<label>Token Address</label>
													<input type="text" class="form-control" placeholder="token Address" id="search_sale_by_token_address" name="search_sale_by_token_address" />
												</div>
												<div class="col-lg-4" style="margin-top: 5px;">
													<label>Seller Wallet</label>
													<input type="text" class="form-control" placeholder="Seller" id="search_sale_by_seller" name="search_sale_by_seller" />
												</div>
												<div class="col-lg-4" style="margin-top: 5px;">
													<label>Buyer Wallet</label>
													<input type="text" class="form-control" placeholder="Buyer" id="search_sale_by_buyer" name="search_sale_by_buyer" />
												</div>
												<div class="col-lg-4" style="margin-top: 5px;">
													<label>Transaction Date</label>
													<div class='input-group' id='kt_daterangepicker_6'>
														<input type='text' class="form-control" name="date_range" id="date_range" readonly="readonly" placeholder="Select date range" />
														<div class="input-group-append">
															<span class="input-group-text">
																<i class="la la-calendar-check-o"></i>
															</span>
														</div>
													</div>
												</div>
												<div class="col-md-1 col-lg-1" style="margin-top: 5px;">
													<label>&nbsp;</label>
													<a class="btn btn-light-primary px-6 font-weight-bold" href="#" id="search_sale">Search</a>
												</div>
												<div class="col-md-1 col-lg-1" style="margin-top: 5px;">
													<label>&nbsp;</label>
													<a class="btn btn-light-danger px-6 font-weight-bold" id="reset_sale_search_form">Reset</a>
												</div>
											</div>
										</div>
										<!--end::Search Form-->
										<div class="separator separator-dashed my-5"></div>
										<!--begin: Datatable-->
										<table class="table table-separate table-head-custom table-checkable" id="sales_report">
											<thead>
												<tr>
													<th>#</th>
                                                    <th>Collectible Name</th>
													<th>Token Type</th>
                                                    <th>token ID</th>
                                                    <th>Token Address</th>
                                                    <th>Seller</th>
                                                    <th>Buyer</th>
                                                    <th>Quantity</th>
                                                    <th>Price (ETH)</th>
                                                    <th>Transaction Date</th>
                                                </tr>
											</thead>
                                            </table>
                                    
										<!--end: Datatable-->
										<!--end: Datatable-->
									</div>
								</div>
								<!--end::Card-->
							</div>
							<!--end::Container-->
						</div>
						<!--end::Entry-->
					</div>
					<!--end::Content-->
					<!--begin::Footer-->
					<%- include('../../partials/footer'); %>
					<!--end::Footer-->
				</div>
				<!--end::Wrapper-->
			</div>
			<!--end::Page-->
		</div>
		<!--end::Main-->
